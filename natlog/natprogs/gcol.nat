edge_col CX CY : node X Ys _, argx _ Ys Y, node X _ CX, node Y _ CY.

color C : argx _ (r g b) C.

nodes Ns : findall (N C) (node N _ C) Ns.

edges Es : findall (CX CY) (edge_col CX CY) Es.



color_graph NCs :
   nodes NCs,
   edges Es,
   color_edges Es.

color_edges () .
color_edges ((CX CY) Es) :
   color CX,
   color CY,
   distinct CX CY,
   color_edges Es.


go NCs : color_graph NCs.

